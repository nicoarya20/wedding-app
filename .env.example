# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these values from your Supabase Dashboard:
# 1. Go to https://supabase.com/dashboard
# 2. Select your project
# 3. Go to Settings → API
# 4. Copy the values below

# Supabase Project URL (e.g., https://xxxxx.supabase.co)
VITE_SUPABASE_URL="your-supabase-project-url"

# Supabase Anon/Public Key (starts with eyJ...)
VITE_SUPABASE_ANON_KEY="your-supabase-anon-key"

# ===========================================
# DATABASE CONNECTION (for Prisma migrations)
# ===========================================
# Get these from Supabase Dashboard:
# 1. Go to Settings → Database
# 2. Copy Connection String (Pooler mode for DATABASE_URL)
# 3. Copy Connection String (Direct/Session mode for DIRECT_URL)

# Connection pooling (for production/runtime)
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (for migrations/schema push)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-[region].pooler.supabase.com:5432/postgres"

# ===========================================
# JWT SECRET (for authentication)
# ===========================================
# Generate a strong random string (min 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# ===========================================
# CLOUDINARY CONFIGURATION (Image Storage)
# ===========================================
# Get these from Cloudinary Dashboard:
# 1. Go to https://cloudinary.com/console
# 2. Copy credentials from dashboard

# Cloudinary Cloud Name
VITE_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Cloudinary API Key
VITE_CLOUDINARY_API_KEY="your-api-key"

# Cloudinary API Secret (only needed for signed uploads/deletion)
CLOUDINARY_API_SECRET="your-api-secret"

# Upload Preset (create in Cloudinary Dashboard → Settings → Upload)
# For unsigned uploads, create a preset with:
# - Signing Mode: Unsigned
# - Folder: wedding-app (optional)
# - Overwrite: false
VITE_CLOUDINARY_UPLOAD_PRESET="wedding_app_preset"
